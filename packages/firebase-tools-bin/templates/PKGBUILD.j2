pkgname=firebase-tools-bin
pkgver={{ version_text }}
pkgrel=1
pkgdesc=" The Firebase Command Line Tools (bundled official standalone binary)"
arch=('x86_64')
url="https://github.com/firebase/firebase-tools"
license=('MIT')
conflicts=('firebase-tools')
options=('!strip')
source=(
    {% for s in sources -%}
    "{{ s.name }}-{{ version_text }}::{{ s.url }}"
    {% endfor -%}
)
md5sums=(
    {% for s in sources -%}
    '{{ s.checksum }}'
    {% endfor -%}
)

package() {
    chmod +x ${srcdir}/firebase-{{ version_text }}
    install -Dm644 "${srcdir}/LICENSE-{{ version_text }}" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    install -Dm755 "${srcdir}/firebase-{{ version_text }}" "${pkgdir}/usr/bin/firebase"
}

